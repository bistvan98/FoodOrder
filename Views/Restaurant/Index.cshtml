@model IEnumerable<Restaurant>

@{
    ViewData["Title"] = "List of the Restaurants";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.PathToLogo)</th>
                    <th>@Html.DisplayNameFor(model => model.name)</th>
                    <th>@Html.DisplayNameFor(model => model.town)</th>
                    <th>@Html.DisplayNameFor(model => model.openTime)</th>
                    <th>@Html.DisplayNameFor(model => model.closeTime)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img class=" rounded-circle" src="@item.PathToLogo" alt="item.Name" style="max-width: 150px" />
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.name)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.town)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.openTime)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.closeTime)
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary"><i class="bi bi-pencil-square"></i>Szerkesztés</a> |
                            <a class="btn btn-outline-info"><i class="bi bi-eye"></i>Részletek</a> |
                            <a class="btn btn-danger"><i class="bi bi-trash"></i>Törlés</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>